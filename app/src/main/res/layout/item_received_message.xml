<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_message_name"
        android:text="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/badge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_name"
        app:layout_constraintLeft_toRightOf="@+id/text_message_name"
        app:srcCompat="@android:drawable/screen_background_light_transparent" />

    <TextView
        android:id="@+id/text_message_body"
        android:text="received message"
        android:background="@drawable/rounded_rectangle_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/text_message_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="time received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/text_message_body"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="40dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_message_body"
        app:layout_constraintLeft_toRightOf="@+id/text_message_time"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/ivThumbsUp"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_message_body"
        app:layout_constraintLeft_toRightOf="@+id/text_message_time"
        app:srcCompat="@drawable/outline_thumb_up" />

    <TextView
        android:id="@+id/tvNumberRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toRightOf="@+id/ivThumbsUp"
        android:text="Number"
        android:textColor="@android:color/darker_gray"
        android:textSize="17sp"/>
    
    <Button
        android:id="@+id/dislikeButton"
        android:layout_width="40dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_message_body"
        app:layout_constraintLeft_toRightOf="@+id/tvNumberRec"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/ivThumbsDown"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_message_body"
        app:layout_constraintLeft_toRightOf="@+id/tvNumberRec"
        app:srcCompat="@drawable/outline_thumb_down" />

    <ImageView
        android:id="@+id/attachedPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/text_message_body"
        app:layout_constraintTop_toBottomOf="@+id/text_message_body"/>
    
    <Button
        android:id="@+id/viewHiddenMessageButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/text_message_body"
        android:layout_alignParentStart="true"
        android:layout_marginRight="52dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/text_message_time" />

</android.support.constraint.ConstraintLayout>
