<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    android:paddingTop="8dp">

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle"
        android:maxWidth="272dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:text="sent message"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_time"
        android:text="time sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_body"
        app:layout_constraintRight_toLeftOf="@+id/text_message_body" />

    <ImageView
        android:id="@+id/ivThumbsDown"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_message_body"
        app:layout_constraintRight_toLeftOf="@+id/text_message_time"
        app:srcCompat="@drawable/outline_thumb_down" />
    
    <TextView
        android:id="@+id/tvNumberSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:layout_constraintRight_toLeftOf="@+id/ivThumbsDown"
        android:text="Number"
        android:textColor="@android:color/darker_gray"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/ivThumbsUpSent"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_message_body"
        app:layout_constraintRight_toLeftOf="@+id/tvNumberSent"
        app:srcCompat="@drawable/outline_thumb_up" />

    <ImageView
        android:id="@+id/attachedPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/text_message_body"
        app:layout_constraintTop_toBottomOf="@+id/text_message_body"/>



</android.support.constraint.ConstraintLayout>
